<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyleg.myfitnessapp.MainActivity"
    android:backgroundTint="#e12929"
    android:background="#e12929">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Fitness Application"
        android:textColor="@android:color/white"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/bt_launch_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Routine"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/bt_addExercise_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Exercise"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@android:color/black"
        android:layout_above="@+id/bt_addWorkout_Activity"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_addWorkout_Activity"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_editRoutine_Activity"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/black"
        android:text="Workout Selector" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Routine"
        android:id="@+id/bt_editRoutine_Activity"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@android:color/black"
        android:layout_above="@+id/bt_launch_activity"
        android:layout_alignParentStart="true" />
</RelativeLayout>
