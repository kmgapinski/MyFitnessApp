<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyleg.myfitnessapp.addExercise">

    <Button
        android:id="@+id/bt_go_back"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Modify Cardio Exercise Screen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="190dp"
        android:text="Denomination:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/intensity_field"
        android:layout_toStartOf="@+id/name_field"
        android:text="Intensity:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time_field"
        android:layout_toStartOf="@+id/name_field"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_field"
        android:layout_toStartOf="@+id/name_field"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <EditText
        android:id="@+id/name_field"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/intensity_field"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Treadmill Run" />


    <EditText
        android:id="@+id/intensity_field"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/denomination_field"
        android:layout_alignStart="@+id/denomination_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="6.0" />

    <EditText
        android:id="@+id/denomination_field"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_add_exercise"
        android:layout_toEndOf="@+id/textViewName"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="mph" />

    <EditText
        android:id="@+id/time_field"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/intensity_field"
        android:layout_alignStart="@+id/name_field"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/bt_add_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:text="Add Exercise" />


    <!--Add default 5 minutes text on this time part-->

</RelativeLayout>
